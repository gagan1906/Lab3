<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="334.0" prefWidth="451.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab3.HelloController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox prefHeight="22.0" prefWidth="430.0">
        <Label text="Gagandeep 200565862"/>
    </HBox>

    <Label text="Name:" />
    <TextField fx:id="nameField" promptText="Type your Name" />

    <Label text="Contact Number:" />
    <TextField fx:id="contactField" promptText="Type your Number" />

    <Label text="Postal Code:" />
    <TextField fx:id="postalField" promptText="Type your Postal Code" />

    <Button onAction="#validateInputs" text="Validate" />

    <Label fx:id="resultLabel" />
</VBox>
